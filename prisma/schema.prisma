generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  role      UserRole @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model User {
  id                          String           @id @default(cuid())
  name                        String
  username                    String           @unique
  email                       String           @unique
  password                    String
  role                        UserRole
  bio                         String?
  avatar                      String?
  isActive                    Boolean          @default(true)
  isWarnedTimes               Int              @default(0)
  createdAt                   DateTime         @default(now())
  updatedAt                   DateTime         @updatedAt
  stripe_account_id           String?
  stripe_connected            Boolean          @default(false)
  stripe_onboarding_completed Boolean          @default(false)
  subscriptionPrice           Decimal?         @db.Decimal(10, 2)
  flaggedAsReporter           FlaggedContent[] @relation("FlaggedContentReporter")
  flaggedAsSender             FlaggedContent[] @relation("FlaggedContentSender")
  followers                   Follow[]         @relation("Followed")
  following                   Follow[]         @relation("Follower")
  streamChats                 StreamChat[]
  createdStreams              Stream[]
  subscribers                 Subscription[]   @relation("CreatorSubscriptions")
  subscriptions               Subscription[]   @relation("MemberSubscriptions")
  tipCreatorTransactions      TipTransaction[] @relation("TipCreator")
  tipMemberTransactions       TipTransaction[] @relation("TipMember")

  @@map("users")
}

model Follow {
  id         String   @id @default(cuid())
  followerId String
  followedId String
  createdAt  DateTime @default(now())
  followed   User     @relation("Followed", fields: [followedId], references: [id], onDelete: Cascade)
  follower   User     @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)

  @@unique([followerId, followedId])
  @@map("follows")
}

model Subscription {
  id                   String    @id @default(cuid())
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  memberId             String
  creatorId            String
  endDate              DateTime?
  fee                  Decimal   @db.Decimal(10, 2)
  startDate            DateTime  @default(now())
  status               String    @default("active")
  stripeSubscriptionId String?
  creator              User      @relation("CreatorSubscriptions", fields: [creatorId], references: [id], onDelete: Cascade)
  member               User      @relation("MemberSubscriptions", fields: [memberId], references: [id], onDelete: Cascade)

  @@unique([creatorId, memberId])
  @@map("subscriptions")
}

model Stream {
  id             String           @id @default(cuid())
  title          String
  description    String?
  workoutType    String?
  thumbnail      String?
  startTime      DateTime
  endTime        DateTime?
  isLive         Boolean          @default(false)
  replayUrl      String?
  viewerCount    Int              @default(0)
  recordingId    String?
  resourceId     String?
  recordingSid   String?
  reminderSent   Boolean          @default(false)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  creatorId      String
  flaggedContent FlaggedContent[]
  chats          StreamChat[]
  creator        User             @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@map("streams")
}

model StreamChat {
  id             String           @id @default(cuid())
  streamId       String
  userId         String
  message        String
  timestamp      DateTime         @default(now())
  isRemoved      Boolean          @default(false)
  flaggedContent FlaggedContent[]
  stream         Stream           @relation(fields: [streamId], references: [id], onDelete: Cascade)
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("stream_chats")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

model TipTransaction {
  id                       String    @id @default(cuid())
  session_id               String    @unique
  creator_id               String
  member_id                String
  livestream_id            String?
  buck_amount              Decimal   @db.Decimal(10, 2)
  amount_cents             Int
  platform_fee_cents       Int
  creator_receives_cents   Int
  status                   String    @default("pending")
  stripe_payment_intent_id String?
  created_at               DateTime  @default(now())
  completed_at             DateTime?
  metadata                 Json?
  creator                  User      @relation("TipCreator", fields: [creator_id], references: [id], onDelete: Cascade)
  member                   User      @relation("TipMember", fields: [member_id], references: [id], onDelete: Cascade)

  @@map("tip_transactions")
}

model FlaggedContent {
  id              String      @id @default(cuid())
  senderId        String
  flaggedMsgId    String?
  reporterId      String
  reporterComment String?
  livestreamId    String?
  createdAt       DateTime    @default(now())
  flaggedMsg      StreamChat? @relation(fields: [flaggedMsgId], references: [id])
  livestream      Stream?     @relation(fields: [livestreamId], references: [id])
  reporter        User        @relation("FlaggedContentReporter", fields: [reporterId], references: [id], onDelete: Cascade)
  sender          User        @relation("FlaggedContentSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@map("flagged_content")
}

enum UserRole {
  ADMIN
  CREATOR
  MEMBER
}
