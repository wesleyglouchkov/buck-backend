// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  CREATOR
  MEMBER
}

model Admin {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  role      UserRole @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admins")
}

model User {
  id            String    @id @default(cuid())
  name          String
  username      String    @unique
  email         String    @unique
  password      String
  role          UserRole
  bio           String?
  avatar        String?
  isActive      Boolean   @default(true)
  isWarnedTimes Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations for Creator
  content       Content[]
  analytics     Analytics[]

  // Relations for Member
  subscriptions Subscription[]

  // Stripe fields
  stripe_account_id         String?
  stripe_connected          Boolean  @default(false)
  stripe_onboarding_completed Boolean @default(false)

  // Tip relations
  tipCreatorTransactions TipTransaction[] @relation("TipCreator")
  tipMemberTransactions  TipTransaction[] @relation("TipMember")

  @@map("users")
}

model Content {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        String   // video, image, text, etc.
  url         String?
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  creator     User @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId   String

  @@map("content")
}

model Analytics {
  id        String   @id @default(cuid())
  date      DateTime @default(now())
  views     Int      @default(0)
  likes     Int      @default(0)
  shares    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  creator   User @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId String

  @@map("analytics")
}

model Subscription {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  member    User @relation(fields: [memberId], references: [id], onDelete: Cascade)
  memberId  String

  @@map("subscriptions")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

model TipTransaction {
  id                     String   @id @default(cuid())
  session_id             String   @unique
  creator_id             String
  member_id              String
  livestream_id          String?
  buck_amount            Decimal  @db.Decimal(10, 2)
  amount_cents           Int
  platform_fee_cents     Int
  creator_receives_cents Int
  status                 String   @default("pending")
  stripe_payment_intent_id String?
  created_at             DateTime @default(now())
  completed_at           DateTime?
  metadata               Json?

  // Relations
  creator User @relation("TipCreator", fields: [creator_id], references: [id], onDelete: Cascade)
  member  User @relation("TipMember", fields: [member_id], references: [id], onDelete: Cascade)

  @@map("tip_transactions")
}
